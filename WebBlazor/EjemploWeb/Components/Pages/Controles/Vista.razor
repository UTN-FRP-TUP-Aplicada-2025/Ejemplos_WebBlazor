@page "/vista"

<h3>Vista</h3>

@rendermode InteractiveServer
@attribute [StreamRendering]

<div>

    <h3>
        <InputText @bind-Value="filtro" placeholder="Filtrar por nombre"
                   @bind-Value:after="OnCambioFiltro"
                   class="form-control mb-3" />
    </h3>

    @foreach(var item in ListaItems)
    {
        <div class="card">
            <div class="card-header">
                <h3>@item.Nombre</h3>
                
            </div>
            <div class="card-body"></div>
            <div class="card-footer">
                <button class="btn btn-primary" @onclick="async () => OnVer(item)">Ver Detalles</button>
            </div>

        </div>
    }

    <div>@detalle</div>
    
</div>

