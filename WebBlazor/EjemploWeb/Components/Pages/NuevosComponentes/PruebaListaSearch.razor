@page "/prueba-lista-search"
@using Ejemplos.Components

@rendermode InteractiveServer
@attribute [StreamRendering]

<h3>PruebaTablePaginable</h3>

<div class="card">    
    <table class="table">
        <thead>
            <tr>
                <th>DNI</th>
                <th>Nombre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Persona p in _personas)
            {
                <tr>
                    <td>@p.Dni</td>
                    <td>@p.Nombre</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    int itemsPorPagina = 2;
    int paginaActual = 1;

    private void CambiarPagina(int nuevaPagina)
    {
        paginaActual = nuevaPagina;
    }

    List<Persona> _personas = new List<Persona>()
    {
        new Persona{ Dni=23343243, Nombre="Maria" },
        new Persona{ Dni=33343243, Nombre="Leonor" },
        new Persona{ Dni=43343243, Nombre="Norberto" },
        new Persona{ Dni=35343243, Nombre="Andrés" },
    };

    class Persona
    {
        public int Dni { get; set; }
        public string Nombre { get; set; }
    }
        
}
